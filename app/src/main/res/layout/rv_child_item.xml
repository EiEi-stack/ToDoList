<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />
    <TextView
        android:id="@+id/tv_todo_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cb_item"
        android:layout_toLeftOf="@id/iv_edit"
        android:text="@string/defaultTime"
        android:padding="16dp"/>
    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toLeftOf="@id/iv_delete"
        android:padding="8dp"
        android:src="@drawable/ic_edit_black_24dp" />

    <TextView
        android:id="@+id/tv_todo_item_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_edit"
        android:layout_toLeftOf="@id/iv_delete"
        android:padding="8dp"
        android:text="@string/defaultTime" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_toStartOf="@id/iv_move"
        android:layout_toLeftOf="@id/iv_move"
        android:padding="8dp"
        android:src="@drawable/ic_delete_black_24dp" />

    <ImageView
        android:id="@+id/iv_move"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/ic_drag_handle_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_todo_item_alarm"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>